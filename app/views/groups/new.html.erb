<h2>New group</h2>

<%= error_messages_for :group %>

<% form_for(@group) do |f| %>
  <p>
    <b>Name</b><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <b>Phone Menu Option</b><br />
    <%= f.text_field :ivr_option %>
  </p>

  <p>
    <b>Caller ID</b><br />
    <%= f.text_field :caller_id %><br/>
    Calls to agents for this group will see this number. Defaults to EngineYard's main number.
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', groups_path %>
