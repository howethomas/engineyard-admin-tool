<h2>Editing group</h2>

<%= error_messages_for :group %>

<% form_for(@group) do |f| %>
  <p>
    <b>Name</b><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <b>Phone Menu Option</b><br />
    <%= f.text_field :ivr_option %>
  </p>

  <p>
    <b>Caller ID Number</b><br />
    <%= f.text_field :caller_id %><br/>
    Calls to agents for this group will see this number.
  </p>
  
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @group %> |
<%= link_to 'Back', groups_path %> |
<%= link_to 'Delete', @group, :confirm => "Are you sure you wish to delete group #{h(@group.name)} permanently?", :method => :delete %>

