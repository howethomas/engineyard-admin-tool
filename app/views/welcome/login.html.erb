

<% if logged_in? %>

<% else %>
  <h2> Log in</h2>

  <% form_tag url_for(:controller => "welcome", :action => "login"), :method => :post do |form| %>

  <p><label for="email">EngineYard Email Address</label><br/>
  <%= text_field_tag "email" %></p>

  <p><label for="password">Password</label><br/>
  <%= password_field_tag "password" %></p>

  <%= submit_tag "Login!" %>

  <% end %>
  
  <% form_tag url_for('forgot_password'), :method => :post, :id => "forgot_password_form" do |form| %>
  <%= link_to "Forgot your password?", "javascript:forgotPassword('#{forgot_password_url}')" %>
  <%= hidden_field_tag 'username_of_forgotten_password' %>
  <% end %>
  
<% end %>